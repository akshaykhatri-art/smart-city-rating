<%- layout('layouts/boilerplate') %>


<div class="container mt-5 mb-3">
    <div class="row">

        <div class="col-md-6 offset-md-3 bg-white shadow rounded px-3">
            <h1 class="text-center mt-2">Edit City</h1>
            <form action="/cities/<%= city._id %>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="cityname">City Name</label>
                    <input class="form-control" type="text" id="cityname" name="city[cityname]"
                        value="<%= city.cityname %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="state">State</label>
                    <input class="form-control" type="text" id="state" name="city[state]" value="<%= city.state %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Images</label>
                    <input class="form-control" type="file" name="image" id="image" multiple>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-2">
                    <% city.images.forEach(function(img, i){ %>
                    <img src="<%= img.thumbnail %>" class="img-thumbnail mb-2" alt="" crossorigin>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="image-<%= i %>" name="deleteImages[]"
                            value="<%= img.filename %>">
                        <label class="form-check-label" for="image-<%= i %>">Delete?</label>
                    </div>
                    <% }) %>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="population">Population</label>
                    <div class="input-group">
                        <span class="input-group-text" id="population-label">@</span>
                        <input type="text" class="form-control" id="populaiton" placeholder="0" aria-label="populaiton"
                            aria-describedby="population-label" name="city[population]" value="<%= city.population %>"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description Url</label>
                    <textarea class="form-control" type="text" id="description" name="city[description]"
                        required><%= city.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="btn-group d-flex justify-content-between mb-3">
                    <div>
                        <button class="btn btn-info">Update City</button>
                    </div>
                    <div>
                        <a class="btn btn-danger" href="/cities/<%= city._id %>">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>